{
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "globals": {
    "BigInt": "readonly"
  },
  "rules": {
    "no-console": ["error", { "allow": ["error"] }],
    "no-unused-vars": "warn",
    "prefer-const": "error",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.spec.js", "tests/**/*.js", "scripts/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}