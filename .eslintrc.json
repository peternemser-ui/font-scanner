{
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "prefer-const": "error",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["src/public/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["src/services/fontAnalyzer.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}